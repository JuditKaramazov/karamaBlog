---
import Time from '@components/Time.astro'

type Props = {
  date: Date | undefined
  updated?: Date
}

const { date, updated } = Astro.props
---

<style>
  .date {
    margin-bottom: calc(var(--spacer) / 2);
    color: var(--text-color-light);
    font-size: var(--font-size-small);
    font-style: italic;
  }
</style>

<div class="date">
  <Time date={date} />
  {updated && ' â€¢ updated '}
  {updated && <Time date={updated} />}
</div>
